      <% disabled = false if local_assigns[:disabled].nil? %>
      <p class="form-inline file-picker" id="<%= id %>">
        <label class="btn btn-default btn-file" <% if disabled %>disabled<% end %>>
          Browse <%= f.file_field :assignment_file, class: "custom-file", style: "display: none;",
                     disabled: disabled %>
        </label>
        <%= f.hidden_field :removefile, class: "remove-custom-file", value: '' %>
        <span class="current_file" style="margin: 6px 12px;">Current file:
          <%= asgn.assignment_file.empty? ? "nothing" :
              link_to(asgn.assignment_file, asgn.assignment_upload.path) %></span>
        <button type="button"
                <% if asgn.assignment_file.empty? || disabled %>
                disabled  class="btn btn-default pull-right remove-custom-file"
                <% else %>
                class="btn btn-warning pull-right remove-custom-file"
                <% end %> >Clear assignment file</button>
      </p>
